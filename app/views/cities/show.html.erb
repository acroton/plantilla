<div class="row">
    <div class="col-lg-12 col-xlg-6">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">Detalles de ciudad</h4>
                <div class="button-group pull right">
                    <%= link_to 'Regresar', cities_path, class: 'btn btn-default' %>
                    <%= link_to "Editar", edit_city_path(@city), class: 'btn btn-primary' %>            
                    <%= link_to "Borrar", city_path(@city), class: 'btn btn-danger', data: {method: 'DELETE', confirm: 'estas seguro?'} %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-xlg-6">
        <div class="card">
            <div class="card-block">
                <table class="table">
                    <tr>
                        <td><b>Nombre:</b></td>
                        <td><%= @city.name %></td>
                    </tr>  
                </table>
            </div>
        </div>
    </div>
</div>

