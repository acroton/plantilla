<div class="row">
    <div class="col-lg-12 col-xlg-6">
        <div class="card">
            <div class="card-block">
                <%= form_for(@city) do |f| %>

                <table class="table">

                    <tr>
                        <td width="30%"><%= f.label :name, "Nombre" %></td>
                        <td><%= f.text_field :name ,class: 'form-control' %></td>
                    </tr>    
                   
                </table>

                <div class="row">
                    <div class="col-md-12 text-right">
                        <%= link_to "Atras", cities_path, class: 'btn btn-default' %>
                        <%= link_to "Cancelar", city_path(@city), class: 'btn btn-warning' if !@city.id.nil? %>
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                </div>

                <% end -%>
            </div>
        </div>
    </div>
</div>
