<div class="row">
    <div class="col-lg-12 col-xlg-6">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">Lista de lugares</h4>
                <div class="button-group pull right">
                    <%= link_to "crear lugar", new_place_path, class: 'btn btn-success' %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
<!-- column -->
<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            
            <div class="table-responsive">
                <table class="table data-table">
                    <thead>
                        <tr>
                            <th>Acronimo</th>
                            <th>Nombre</th>
                            <th>Ciudad</th>
                            <th>Direccion</th>
                            <th>Telefono</th>
                            <th>Latitud</th>
                            <th>Longitud</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>                        
                        <% @places.each do |place| %>
                        <tr>
                            <td><%= place.acronym %></td> 
                            <td><%= place.name %></td>
                            <td><%= place.city.name unless place.city.nil? %></td>
                            <td><%= place.address %></td>
                            <td><%= place.phone %></td>
                            <td><%= place.latitude %></td>
                            <td><%= place.longitude %></td>
                            <td><%= place.email %></td>
                            <td><span><%= link_to "Detalle", place_path(place), class: 'btn btn-danger btn-xs' %></span> </td>
                        </tr>
                        <% end -%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function(){
        $('.data-table').dataTable().fnSort( [ [1,'asc'] ] );
    })
</script>