<div class="row">
    <div class="col-lg-12 col-xlg-6">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">Lista de Usuarios</h4>
                <div class="button-group pull right">
                    <%= link_to "crear usuario", new_user_path, class: 'btn btn-success' %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
<!-- column -->
<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            
            <div class="table-responsive">
                <table class="table data-table">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>                        
                        <% @users.each do |user| %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.first_name %></td> 
                            <td><%= user.last_name %></td>                  
                            <td><%= user.email %></td>
                            <td><span><%= link_to "Detalle", user_path(user), class: 'btn btn-danger btn-xs' %></span> </td>
                        </tr>
                        <% end -%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function(){
        $('.data-table').dataTable().fnSort( [ [1,'asc'] ] );
    })
</script>