<div class="row">
    <div class="col-lg-12 col-xlg-6">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">Detalles de usuario</h4>
                <div class="button-group pull right">
                    <%= link_to 'Regresar', users_path, class: 'btn btn-default' %>
                    <%= link_to "Editar", edit_user_path(@user), class: 'btn btn-primary' %>            
                    <%= link_to "Borrar", user_path(@user), class: 'btn btn-danger', data: {method: 'DELETE', confirm: 'estas seguro?'} %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-xlg-6">
        <div class="card">
            <div class="card-block">
                <table class="table">
                    <tr>
                        <td><b>Nombre:</b></td>
                        <td><%= @user.first_name %></td>
                    </tr>            
                    <tr>
                        <td><b>Apellido:</b></td>
                        <td><%= @user.last_name %></td>
                    </tr>
                    <tr>
                        <td><b>Fecha de creacion:</b></td>
                        <td><%= @user.created_at %></td>
                    </tr>
                    <tr>
                        <td><b>Email:</b></td>
                        <td><%= @user.email %></td>
                    </tr>  
               
                </table>
            </div>
        </div>
    </div>
</div>

